{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "expect": true,
        "sinon": true,
        "Snap": true,
        "mina": true,
        "describe": true,
        "it": true,
        "before": true,
        "afterEach": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2,
            { 
                "SwitchCase": 1 
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
	   "no-console":0
    }
}
