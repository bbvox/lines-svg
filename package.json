{
  "name": "lines-svg",
  "version": "0.3.0",
  "description": "LinesSvg is a financial chart library based on snapsvg",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bbvox/lines-svg.git"
  },
  "config": {
    "svgSrc": "node_modules/snapsvg/dist/snap.svg-min.js",
    "src": "src/lines.js",
    "dest": "dist/lines.js",
    "timeout": 10000
  },
  "scripts": {
    "start": "serve ./",
    "build:dev": "webpack --process --mode=development --watch=true",
    "build:prod": "webpack --process --mode=production",
    "test": "TEST=true webpack --mode=production && mocha dist_test/*.test.js",
    "lib:build": "rollup -c",
    "build:watch": "rollup -f iife -i lib/index.js -o dist/build.js -w",
    "test1:lib": "mocha test_lib/store.test.js --timeout 10000 --exit",
    "test1:cover": "nyc --reporter=html ./node_modules/mocha/bin/mocha test_lib/store.test.js --recursive --timeout 10000 --exit",
    "_test": "mocha --recursive --timeout $npm_package_config_timeout --exit",
    "test1": "mocha test/index.test.js --recursive --timeout $npm_package_config_timeout --exit",
    "test:cover": "istanbul cover _mocha test/*.js",
    "_build": "npm run build1 && npm run build2 && npm run build3",
    "_build1": "rm -rf dist .tmp",
    "_build2": "mkdir .tmp dist",
    "_build3": "cat $npm_package_config_svgSrc $npm_package_config_src > $npm_package_config_dest",
    "lint": "eslint .",
    "cover": "istanbul cover _mocha test/*.js",
    "lcov": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "bld3": "rollup -f iife --globals jquery:jQuery,lodash:_ -i src/app.js -o build/app.js -m build/app.js.map",
    "webpack": "webpack --progress --mode=development",
    "webpack:test": "TEST=true webpack && mocha test-dist/main.js --require source-map-support/register && rm -rf test-dist",
    "webpack:testt": "mocha test-dist/main.js --require source-map-support/register"
  },
  "keywords": [
    "svg",
    "forex charts",
    "candlestick",
    "averages",
    "responsive"
  ],
  "author": "bbvox",
  "license": "MIT",
  "dependencies": {
    "snapsvg": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "coveralls": "^3.0.6",
    "eslint": "^6.5.0",
    "istanbul": "^0.4.5",
    "jsdom": "^15.1.1",
    "jsdom-global": "^3.0.2",
    "mocha": "^6.2.1",
    "nyc": "^14.1.1",
    "rollup": "^1.23.1",
    "serve": "^11.2.0",
    "sinon": "^7.5.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  }
}